{
    "(Install Server LWC SFDX)": {
        "prefix": "lwc-install",
        "body": [
            "// Remember you need install SFDX and Start Batch in project path",
            "// 1.Control + Shift + P",
            "// 2.Focus Terminal",
            "// 3.Page and Execute next command",
            "sfdx plugins:install @salesforce/lwc-dev-server",
            "$0"
        ],
        "description": "Instala servidor de pruebas LWC"
    },
    "(Start Server LWC SFDX)": {
        "prefix": "lwc-init",
        "body": [
            "// Remember you need execute lwc-install command",
            "// 1.Control + Shift + P",
            "// 2.Focus Terminal",
            "// 3.Page and Execute next command",
            "sfdx force:lightning:lwc:start",
            "$0"
        ],
        "description": "Inicia el servidor de pruebas LWC"
    }
}